<% provide :page_title, "User Info" %>

<!--上導覽列-->
<nav class="navbar navbar-expand fixed-top navbar-dark bg-primary flex-column bd-navbar p-1">
  <span class="navbar-brand m-0 h1">HiGoDrive</span>
  <!--<a class="navbar-brand mx-2" href="#">HiGoDrive</a>-->
</nav>

<!--內容-->
<main>
  <div class="container">

    <div class="user">
      <div class="card mb-3 mx-auto" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-4">
            <img id="user" src=<%= image_url 'user-circle-regular.svg' %> type="image/svg+xml" class="card-img" alt="user">
          </div>
          <div class="col-8">
            <div class="card-body">
              <h5 class="card-title">用戶名稱：<%= current_user.username %></h5>
              <p class="card-text">用戶類型：<%= {1 => "Passenger", 2 => "Driver", 3 => "Passenger & Driver"}[current_user.roles] %></p>
              <p class="card-text">電子信箱：<%= current_user.email %></p>
              <p class="card-text">手機號碼：<%= current_user.phone %></p>
              <p class="card-text">個人資訊：<%= current_user.bio %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 px-2 py-2">
        <a href="/user/edit/account"><button type="button" class="btn btn-outline-info btn-block">編輯帳號</button></a>
      </div>
      <hr>
      <div class="col-12 px-2 py-2">
        <a href="/user/edit/account/password"><button type="button" class="btn btn-outline-info btn-block">修改密碼</button></a>
      </div>
      <hr>
      <div class="col-12 px-2 py-2">
        <a href="/user/edit/bio"><button type="button" class="btn btn-outline-info btn-block">編輯個人資訊</button></a>
      </div>
      <hr>
      <div class="col-12 px-2 py-2">
        <a href="/logout"><button type="button" class="btn btn-outline-info btn-block">登出</button></a>
      </div>
    </div>
  </div>
</main>

<!--下導覽列-->
<nav class="navbar navbar-expand fixed-bottom navbar-dark bg-primary bd-navbar py-0">
  <div class="row navbar-nav m-auto p-auto">
    <div class="col-3">
      <a class="nav-item nav-link pt-2 pb-0" href="/home">
        <p class="text-center my-0"><i class="fas fa-home fa-lg"></i></p>
        <p class="text-center my-0">Home</p>
      </a>
    </div>
    <div class="col-3">
      <a class="nav-item nav-link pt-2 pb-0" href="/search">
        <p class="text-center my-0"><i class="fas fa-search fa-lg"></i></p>
        <p class="text-center my-0">Search</p>
      </a>
    </div>
    <div class="col-3">
      <a class="nav-item nav-link pt-2 pb-0" href="/task">
        <p class="text-center my-0"><i class="fas fa-tasks fa-lg"></i></p>
        <p class="text-center my-0">Task</p>
      </a>
    </div>
    <div class="col-3">
      <a class="nav-item nav-link pt-2 pb-0" href="/user">
        <p class="text-center my-0"><i class="fas fa-user fa-lg"></i></p>
        <p class="text-center my-0">User</p>
      </a>
    </div>
  </div>
</nav>
