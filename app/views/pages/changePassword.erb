<% provide :page_title, "Change Password" %>

<div class="container">

  <div class="mt-4 mb-0 p-2">
    <a href="/user" class="list-group-item-action">
      <h2 class="text-center">HiGoDrive</h2>
    </a>
    <img id="motor" class="rounded mx-auto d-block" src="/assets/motorcycle-solid.svg" type="image/svg+xml" />
    <hr>
  </div>

  <form>
    <div class="form-group">
      <label for="old_password">舊密碼</label>
      <input type="text" class="form-control" id="old_password" name="old_password" required>
    </div>
    <div class="form-group">
      <label for="new_password">新密碼</label>
      <input type="password" class="form-control" id="new_password" name="new_password" required>
    </div>
    <div class="form-group">
      <label for="new_password_confirmation">請再次輸入新密碼</label>
      <input type="password" class="form-control" id="new_password_confirmation" name="new_password_confirmation"
        required>
    </div>
    <br>
    <br>
    <div class="px-5 py-3">
      <button type="submit" class="btn btn-success btn-lg btn-block">確認更改</button>
    </div>
  </form>

</div>
